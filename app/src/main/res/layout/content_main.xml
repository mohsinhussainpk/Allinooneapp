<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    tools:context="com.example.mohsinhussain.allinoneapp.MainActivity"

    android:id="@+id/leftDrawer"
    android:layout_width="fill_parent"
    android:layout_height="485dp"
    android:layout_gravity="start"
    android:fillViewport="true"
    android:background="#fff"
    android:scrollbarSize="4dp"


    >

<LinearLayout


    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"


>
<RelativeLayout
    android:id="@+id/RelativeLayout01"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <ImageButton
        android:id="@+id/shoppingImage"
      style="@style/ImageStyle"
        android:src="@drawable/shoppingcart"
        android:onClick="moveToBrandsList"




        />
    <TextView
        android:layout_below="@+id/shoppingImage"

        android:text="Shopping"

        style="@style/TextStyle"
        android:paddingLeft="10dp"

        />

    <ImageButton
        android:id="@+id/foodImage"
        style="@style/ImageStyle"
        android:layout_toRightOf="@+id/shoppingImage"
        android:src="@drawable/food"


        />
    <TextView

        style="@style/TextStyle"
        android:layout_toRightOf="@+id/shoppingImage"
        android:paddingLeft="25dp"
        android:layout_below="@+id/foodImage"
        android:text="Food"

        />

    <ImageButton
        android:id="@+id/carhiringImage"
        style="@style/ImageStyle"
        android:layout_toRightOf="@+id/foodImage"
        android:src="@drawable/carbuy"


        />
    <TextView

        style="@style/TextStyle"
        android:layout_below="@+id/carhiringImage"

        android:paddingLeft="90dp"
        android:layout_toRightOf="@+id/shoppingImage"



        android:text="Carhiring"

        />

    <ImageButton
        android:id="@+id/classifiedSitesImage"
        style="@style/ImageStyle"
        android:layout_toRightOf="@+id/carhiringImage"
        android:src="@drawable/onlinejobsearchsymbol"


        />
    <TextView

        style="@style/TextStyle"
        android:layout_toRightOf="@+id/carhiringImage"
        android:paddingLeft="9dp"
        android:layout_below="@+id/classifiedSitesImage"
        android:text="Classified Sites"

        />



</RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        >


        <ImageButton
            android:id="@+id/jobSiteImage"
            style="@style/ImageStyle"
            android:src="@drawable/onlinejobsearchsymbol"

            />
        <TextView
            android:layout_below="@+id/jobSiteImage"

            android:text="Job Site"

            style="@style/TextStyle"
            android:paddingLeft="10dp"

            />

        <ImageButton
            android:id="@+id/newsImage"
            style="@style/ImageStyle"
            android:layout_toRightOf="@+id/jobSiteImage"
            android:src="@drawable/newspaper"


            />
        <TextView

            style="@style/TextStyle"
            android:layout_toRightOf="@+id/jobSiteImage"
            android:paddingLeft="25dp"
            android:layout_below="@+id/newsImage"
            android:text="News"

            />

        <ImageButton
            android:id="@+id/mobileWalletsImage"
            style="@style/ImageStyle"
            android:layout_toRightOf="@+id/newsImage"
            android:src="@drawable/wallet"


            />
        <TextView

            style="@style/TextStyle"
            android:layout_below="@+id/mobileWalletsImage"

            android:paddingLeft="12dp"
            android:layout_toRightOf="@+id/newsImage"



            android:text=" Wallets"

            />

        <ImageButton
            android:id="@+id/BookingImage"
            style="@style/ImageStyle"
            android:layout_toRightOf="@+id/mobileWalletsImage"
