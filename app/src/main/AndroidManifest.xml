<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.e.panoplytek.yotap">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".IntroActivity"
            android:label="@string/app_name"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">

            <!-- <receiver -->
            <!-- android:name=".CheckConnetivity" -->
            <!-- android:exported="false" /> -->

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".StoresActivity" />
        <activity android:name=".Webview" />
        <activity android:name=".TermsAndConditionActivity" />
        <activity android:name=".PrivacyActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".BottomNavigtionViewActivity" />
        <activity android:name=".NewsAndDealsActivity" />
        <activity android:name=".SplashActivity" />
        <activity android:name=".DealsAndCouponsActivty" />


        <service android:name=".NotificationClass">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".fcmInstanceIdServiceClass">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity android:name="com.e.panoplytek.yotap.LiveTvActivity" />
        <activity android:name=".GovermentServicesActivity" />

        <meta-data
            android:name="io.branch.sdk.BranchKey"
            android:value="key_live_eexBWXhwksdyQKOHkfRg2pknzqhtSN3q" />

        <receiver
            android:name="io.branch.referral.InstallListener"
            android:exported="true">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>

        <intent-filter>
            <data
                android:host="open"
                android:scheme="Allinone" />

            <action android:name="android.intent.action.VIEW" />

            <category android:name="android.intent.category.DEFAULT" />
            <category android:name="android.intent.category.BROWSABLE" />
        </intent-filter>

        <activity android:name=".ReferAndEarn" />
        <activity android:name="com.e.panoplytek.yotap.NewsListViewActivity" />
        <activity android:name=".VideoActivity" />
        <activity android:name=".TravelActivity"></activity>
    </application>

</manifest>